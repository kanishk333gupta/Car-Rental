  <thead class="thead-dark">
    <tr>
      <th>Booking time</th>
      <th>Return time</th>
      <th>Kilometers</th>
      <th>Due Amount</th>
      <th>Service amount</th>
      <th>Booking charges </th>
      <th>Total Amount Price (in Rs.)</th>
      <%if current_user.admin%>
        <th>User</th>
      <%end%>
      <th>Update</th>
    </tr>
  </thead>

  <% @bookingscar.each do |booking| %>
    <tr>
        <%= render booking %>
      <% end %>
    </tr>
</table>

<% end %>

