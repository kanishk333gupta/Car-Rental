<div class="page-content " id="page-content">
  <div class="row d-flex justify-content-center m-0">
    <div class="col-sm-10 ">
      <div class="card">
        <div class="card-header">
          <h3>User details</h3>
        </div>
        <table class = "table table-striped table-bordered table-hover table-sm">
          <thead class="thead-dark">
            <tr>
              <th>UserName</th>
              <th>Email</th>
              <th>Status</th>
              <th>Show</th>
              <th>Delete</th>
            </tr>
          </thead>
          <% @users.each do |user|  %>
            <tbody>
            <tr>
              <td><%= user.email.split('@')[0]%></td>
              <td><%= user.email %></td>
              <td>
                <%if user.admin==true%>
                  <%="ADMIN"%>
                <%else%>
                  <%= "Customer" %>
                <%end%>
              </td>
              <td><%= link_to "Show this user", user , class: 'btn btn-primary' %></td>
              <td><%= link_to "Delete", user, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
