<div class="bg-primary text-center py-4">
  <div class="container">
    <h1 class="fw-light text-white">Rental Cars Pvt Ltd </h1>
  </div>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container py-5 h-100 ">
  <div class="row d-flex justify-content-center align-items-center h-100 m-0 ">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5 ">
     <div class="card shadow-2-strong shadow" style="border-radius: 1rem;">
        <div class="card-body p-5 text-center">
          <h3 class="mb-5">Log in</h3>
          <div class="form-outline mb-4">
            <%= f.label :email ,class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control form-control-lg" %>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :password ,class: "form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password" ,class: "form-control form-control-lg" %>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="form-check d-flex justify-content-start mb-4">
            <div class="col d-flex justify-content-center">
              <div class="form-check"">
                <%= f.check_box :remember_me , class:"form-check-input" %>
                <%= f.label :remember_me , class:"form-check-label"%>
              </div>
            </div>
            <% end %>
            <div class="d-flex justify-content-center">
              <%= f.submit "Log in" ,class: "btn btn-primary mx-1" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 </div>
<%= render "devise/shared/links" %>
<% end %>
