<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form mb-3 text-center">
    <%= f.label :email ,class: "form-label mb-3"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control form-control-lg mb-3"%>
  </div>

  <div class="col d-flex justify-content-center">
    <%= f.submit "Send me reset password instructions" ,class: "btn btn-primary btn-block mb-3"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
